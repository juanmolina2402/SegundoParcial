<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:gravity="center|right"
    tools:context=".WelcomeMCActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:textColor="@color/teal_700"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="¡Bienvenido!"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="@color/teal_700"
        android:textAlignment="center"
        android:text="Antes de iniciar, dinos tu nombre y número de teléfono"/>

    <EditText
        android:id="@+id/edtNomProp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:inputType="textPersonName"
        android:maxLength="20"
        android:hint="Digite su nombre"/>

    <EditText
        android:id="@+id/edtNumProp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:inputType="phone"
        android:maxLength="8"
        android:hint="Digite su número"/>

    <Button
        android:id="@+id/btnGuardarProp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textAllCaps="false"
        android:text="Siguiente"/>

</LinearLayout>